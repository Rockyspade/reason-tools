{
  "manifest_version": 2,

  "name": "Reason Tools",
  "description": "Make working with Reason fun",
  "version": "1.0",
  "background": {
    "scripts": ["Background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "Popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ContentSelectionText.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+D"
      }
    }
  },
  "permissions": [
    "activeTab"
  ]
}
