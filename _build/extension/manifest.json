{
  "manifest_version": 2,

  "name": "Reason Tools",
  "description": "This extension makes Reason more friendly",
  "version": "1.0",

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
